.category-megamenu-mobile
  .category-list-wrapper
    each item, index in dataCategory
      .list-wrap(class=`${index === 0 ? 'active' : ''}`)
        if (item.child.length !== 0)
          span.category-link.flex.items-center
            img(src=`./images/category-icon-${index + 1}.jpg`, alt="").icon
            span= item.title
        else
          a(href="#").category-link.flex.items-center
            img(src=`./images/category-icon-${index + 1}.jpg`, alt="").icon
            span= item.title

      if item.child.length !== 0
        .category-submenu(class=`${index === 0 ? 'active' : ''}`)
          a(href="#").category-see-all Xem tất cả
          h3.title Chọn danh mục
          .list-wrap.row
            each lv1, indexLv1 in item.child
              a(href="#").col-4
                img(src="./images/product-image.jpg", alt="")
                span= lv1.title

          each lv1, indexLv1 in item.child
            if lv1.child.length !== 0
              h3.title= `Chọn ${lv1.title}`
              .list-wrap.row
                each lv2, indexLv2 in lv1.child
                  a(href="#").col-4
                    img(src="./images/product-image.jpg", alt="")
                    span= lv2.title
