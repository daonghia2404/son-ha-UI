header.header
  .header-top
    .container
      .flex.items-center
        each item in [1,2,3]
          .banner-header-item
            img(src=`./images/banner-header-${item}.jpg`, alt="")

  .header-nav
    .container
      .flex.items-center.justify-between
        .header-nav-item.flex.items-center
          img(src="./images/icon-circle-outline.svg", alt="")
          a(href="#").welcome-link 【Hệ thống phân phối】Bồn nước Sơn Hà chính hãng toàn quốc
        .header-nav-item.flex.items-center
          each item in ['Góc tư vấn', 'Tin tức', 'Tuyển dụng', 'Giới thiệu']
            a(href="#").nav-link= item

  .header-main
    .container
      .flex.items-center.justify-between
        a(href="#").header-logo
          img(src="./images/logo.jpg", alt="")
        .header-search
          form(action="#").flex.items-center
            input(type="text" placeholder="Bạn cần tìm gì")
            button.flex.items-center.justify-center
              img(src="./images/icon-search.svg", alt="")
        .header-right.flex.items-center
          .right-item.flex.items-center
            img(src="./images/icon-hotline.png", alt="")
            .item-info
              p Hotline
              a(href="tel:+0969269090") 0969.26.90.90

          .right-item.flex.items-center
            img(src="./images/icon-shopping-cart.svg", alt="")
            .item-info
              p Giỏ hàng
              a(href="tel:+0969269090") 0969.26.90.90
            img(src="./images/icon-caret-down.svg", alt="").caret

      